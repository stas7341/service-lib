{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "."
  },
  "include": [
    "lib/**/*.ts",
    "index.ts",
    "test/**/*.ts",
    "test/**/*.json",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
