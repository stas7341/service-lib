{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "declaration": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "example/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
