{
    "name": "service-lib",
    "version": "1.0.0",
    "author": "Stas M.",
    "description": "A common project to share functionality between microservices",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true
        }
    },
    "scripts": {
        "build": "tsc",
        "load_modules": "npm i",
        "publishing": "npm pack && npm publish",
        "test": "NODE_ENV=test STANDALONE_TEST=true jest --config=jest.config.ts",
        "test_rabbit": "NODE_ENV=test STANDALONE_TEST=true jest --config=jest.config.ts -t=Unit Tests AMQP",
        "testDev_rabbit": "NODE_ENV=debug jest --config=jest.config.js -t=Unit Tests AMQP",
        "test_configuration": "NODE_ENV=test STANDALONE_TEST=true jest --config=jest.config.ts -t=Unit Tests for configuration",
        "test_logger": "NODE_ENV=test STANDALONE_TEST=true jest --config=jest.config.ts -t=Unit Tests Logger",
        "test_http": "NODE_ENV=test STANDALONE_TEST=true jest --config=jest.config.ts -t=Unit Tests http requests",
        "test_redis": "NODE_ENV=test STANDALONE_TEST=false jest --config=jest.config.ts -t=Unit Tests Redis",
        "test_remoteCache": "NODE_ENV=test STANDALONE_TEST=false jest --config=jest.config.ts -t=Unit Tests for remote cache",
        "force_clean_project": "rm -rf ./node_modules;find . -name \"*.js\" -type f -delete;find . -name \"*.map\" -type f -delete"
    },
    "dependencies": {
        "amqplib": "0.10.3",
        "axios": "1.3.4",
        "body-parser": "1.20.2",
        "cookie-parser": "1.4.6",
        "debug": "4.3.4",
        "express": "4.18.2",
        "mysql2": "3.2.0",
        "node-cache": "5.1.2",
        "redis": "4.6.10",
        "ts-jest": "^29.0.5",
        "winston": "3.8.2"
    },
    "devDependencies": {
        "@types/jest": "^29.4.1",
        "@types/node": "^18.15.3",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "auto-version-js": "^0.3.10",
        "eslint": "8.30.0",
        "eslint-plugin-react": "^7.32.2",
        "jest": "^29.5.0",
        "typescript": "^4.9.5"
    }
}
